<?xml version="1.0"?>
<launch>
    <arg name="rviz_path" default="$(find waypoint_manager_ros)/launch/rviz.rviz"/>
    <arg name="map_path" default="$(find waypoint_manager_ros)/maps/map.yaml"/>
    <arg name="start" default="0"/>
    <arg name="width_ratio" default="0.3"/>
    <arg name="is_visible_text" default="true"/>
    <arg name="is_visible_edge" default="true"/>
    <arg name="output" default="screen" doc="[screen, log]"/>

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rviz_path)"/>
    <node pkg="map_server" type="map_server" name="map_server" args="$(arg map_path)"/>
    <include file="$(find waypoint_manager_ros)/launch/waypoint_manager.launch">
        <arg name="start" value="$(arg start)"/>
        <arg name="width_ratio" value="$(arg width_ratio)"/>
        <arg name="is_visible_text" value="$(arg is_visible_text)"/>
        <arg name="is_visible_edge" value="$(arg is_visible_edge)"/>
        <arg name="output" value="$(arg output)"/>
    </include>
</launch>
